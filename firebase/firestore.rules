rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /activity/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if /databases/$(database)/documents/users/$(request.auth.uid) in resource.data.usersNotified;
      allow delete: if /databases/$(database)/documents/users/$(request.auth.uid) in resource.data.usersNotified;
    }

    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == document;
      allow delete: if request.auth.uid == document;
    }

    match /Companies/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /invites/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
